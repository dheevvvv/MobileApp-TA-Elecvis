<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RecomendationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_20"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#60CC65"
                app:cardCornerRadius="@dimen/margin_10"
                >

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Energy Reccomendation"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginStart="@dimen/margin_20"
                    android:fontFamily="@font/poppins_bold"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="200dp"
                android:layout_marginTop="@dimen/margin_40"
                app:cardCornerRadius="@dimen/margin_10"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_check"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Turn Off Air Conditioner"
                        android:textColor="@color/earth_02"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:fontFamily="@font/poppins_medium"
                        />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:src="@drawable/baseline_expand_more_24"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="200dp"
                android:layout_marginTop="@dimen/margin_40"
                app:cardCornerRadius="@dimen/margin_10"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_check"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Put Sleep Timer on Smart TV"
                        android:textColor="@color/earth_02"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:fontFamily="@font/poppins_medium"
                        />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:src="@drawable/baseline_expand_more_24"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="200dp"
                android:layout_marginTop="@dimen/margin_40"
                app:cardCornerRadius="@dimen/margin_10"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_check"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lower Monitor Refresh rate"
                        android:textColor="@color/earth_02"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:fontFamily="@font/poppins_medium"
                        />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:src="@drawable/baseline_expand_more_24"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="200dp"
                android:layout_marginTop="@dimen/margin_40"
                app:cardCornerRadius="@dimen/margin_10"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_check"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Your PC to Best efficiency"
                        android:textColor="@color/earth_02"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:fontFamily="@font/poppins_medium"
                        />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:src="@drawable/baseline_expand_more_24"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="200dp"
                android:layout_marginTop="@dimen/margin_40"
                app:cardCornerRadius="@dimen/margin_10"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_check"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Turn Off Air Conditioner"
                        android:textColor="@color/earth_02"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:fontFamily="@font/poppins_medium"
                        />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:src="@drawable/baseline_expand_more_24"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/main_bottommenu"
        android:layout_gravity="bottom"/>

</androidx.constraintlayout.widget.ConstraintLayout>